                <arg value="clean" />
                <arg value="test" />  
                <arg value="dependency:tree"/>                     
                <!--<arg value="-DtckTest=MessageDrivenBeanContextTest" />-->                      
		</exec>
	</presetdef>
        
        <presetdef name="mvn.test.win">
